{{#foreach posts}}
    <li class="post-stub {{post_class}}" >
        <a class="js-ajax-link"  title="{{title}} | {{@blog.title}}" href="{{url}}">
            <h4 class="post-stub-title">{{title}}</h4>

            <time class="post-stub-date" datetime="{{date published_at format="YYYY-MM-DDThh:mm:ssZ"}}">Published {{date format="MMMM Do YYYY"}}</time>

            {{#if featured}}
                <span class="post-stub-tag">Featured</span>
            {{/if}}
        </a>
    </li>
{{/foreach}}
